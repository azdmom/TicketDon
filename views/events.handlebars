</header>
<main>
    <!--Bootstrap container-->
    <div class="container">


        <div class="row">

            <div class="col-md-12">

                <center>
                    <h2>Events</h2>
                </center>

                <br>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Event Name:</th>
                            <th scope="col">Date:</th>
                            <th scope="col">Location:</th>
                            <th scope="col">Venue Name:</th>
                            <th scope="col">Ticket Qty:</th>
                            <th scope="col">Request Ticket:</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each tickets}}
                        <tr style="padding: 20px">
                            <td class="event_name">{{event_name}}</td>
                            <td class="date">{{date}}</td>
                            <td class="location">{{location}}</td>
                            <td class="venue_name">{{venue_name}}</td>
                            <td class="ticket_qty">{{ticket_qty}}</td>
                            <td>
                                <button type="button" class="btn btn-primary request-ticket" data-toggle="modal" data-target="#request_modal">Request Ticket</button>
                            </td>
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>

            </div>

        </div>
    </div>

</main>


